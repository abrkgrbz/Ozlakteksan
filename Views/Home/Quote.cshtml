@model OzlasteksanWeb.Models.QuoteForm
@{
    ViewData["Title"] = "Teklif Formu";
}

<section class="py-5">
    <div class="container">
        <div class="page-hero text-center">
            <div class="row justify-content-center">
                <div class="col-lg-9">
                    <span class="hero-badge mb-3">
                        <i class="fas fa-rocket"></i>
                        48 saatte teknik teklif
                    </span>
                    <h1 class="display-5 fw-bold">Projeniz için en doğru kauçuk çözümü belirleyelim</h1>
                    <p class="lead mb-4">
                        Formu doldurun, mühendis ekibimiz üretilebilirlik analizi yaparak size en uygun fiyat ve termin planını paylaşsın.
                    </p>
                    <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
                        <div class="badge-soft">
                            <i class="fas fa-shield-check me-2"></i> ISO 9001 kalite süreçleri
                        </div>
                        <div class="badge-soft">
                            <i class="fas fa-clock me-2"></i> Hızlı numune & teslimat
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show surface mb-4" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row g-4">
            <div class="col-lg-8">
                <div class="contact-card">
                    <div class="card-body">
                        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
                            <div>
                                <span class="tag">Teklif talebi</span>
                                <h3 class="fw-semibold mt-3 mb-0">İhtiyaçlarınızı detaylandırın</h3>
                            </div>
                            <div class="badge-soft mt-3 mt-md-0">
                                <i class="fas fa-headset me-2"></i> Destek hattı: 0212 243 46 08
                            </div>
                        </div>

                        <form method="post" asp-action="Quote">
                            <div class="row g-3">
                                <div class="col-12">
                                    <h5 class="fw-semibold text-uppercase text-muted small mb-3">Firma & iletişim</h5>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Name" class="form-control" placeholder="Adınız Soyadınız" />
                                        <label asp-for="Name"></label>
                                    </div>
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Company" class="form-control" placeholder="Şirket Adı" />
                                        <label asp-for="Company"></label>
                                    </div>
                                    <span asp-validation-for="Company" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Email" class="form-control" placeholder="E-posta adresiniz" />
                                        <label asp-for="Email"></label>
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Phone" class="form-control" placeholder="Telefon numarası" />
                                        <label asp-for="Phone"></label>
                                    </div>
                                    <span asp-validation-for="Phone" class="text-danger small"></span>
                                </div>

                                <div class="col-12 mt-2">
                                    <h5 class="fw-semibold text-uppercase text-muted small mb-3">Ürün detayları</h5>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <select asp-for="Product" class="form-select">
                                            <option value="">Ürün seçiniz</option>
                                            <option value="O-ring Conta">O-ring Conta</option>
                                            <option value="Kauçuk Levhalar">Kauçuk Levhalar</option>
                                            <option value="Silikon Levhalar">Silikon Levhalar</option>
                                            <option value="Poliüretan Levhalar">Poliüretan Levhalar</option>
                                            <option value="Kaplin Lastikleri">Kaplin Lastikleri</option>
                                            <option value="Kauçuk Takozlar">Kauçuk Takozlar</option>
                                            <option value="Kauçuk Körükler">Kauçuk Körükler</option>
                                            <option value="Diyafram Lastikleri">Diyafram Lastikleri</option>
                                            <option value="Kablo Geçit Lastikleri">Kablo Geçit Lastikleri</option>
                                            <option value="Özel">Özel Tasarım Parça</option>
                                        </select>
                                        <label asp-for="Product"></label>
                                    </div>
                                    <span asp-validation-for="Product" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Quantity" class="form-control" placeholder="Adet / kg" />
                                        <label asp-for="Quantity"></label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <textarea asp-for="Specifications" class="form-control" style="height: 130px;" placeholder="Ölçüler, toleranslar, malzeme bilgisi"></textarea>
                                        <label asp-for="Specifications"></label>
                                    </div>
                                    <span asp-validation-for="Specifications" class="text-danger small"></span>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <textarea asp-for="AdditionalNotes" class="form-control" style="height: 120px;" placeholder="Ek istekler, teslimat adresi vb."></textarea>
                                        <label asp-for="AdditionalNotes"></label>
                                    </div>
                                    <span asp-validation-for="AdditionalNotes" class="text-danger small"></span>
                                </div>

                                <div class="col-12">
                                    <button type="submit" class="btn btn-accent w-100">
                                        <i class="fas fa-paper-plane"></i> Teklif Talebini Gönder
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="d-flex flex-column gap-4 h-100">
                    <div class="surface">
                        <h5 class="fw-semibold mb-3">Teklif sürecinde neler yapıyoruz?</h5>
                        <ul class="list-unstyled text-soft mb-0">
                            <li class="d-flex gap-3 mb-3">
                                <i class="fas fa-microscope text-accent mt-1"></i>
                                <div>
                                    <strong>Uygun malzeme analizi</strong><br />
                                    İşletmenizin çalışma koşullarına en uygun elastomer belirlenir.
                                </div>
                            </li>
                            <li class="d-flex gap-3 mb-3">
                                <i class="fas fa-ruler-combined text-accent mt-1"></i>
                                <div>
                                    <strong>Tolerans & kalıp değerlendirmesi</strong><br />
                                    Teknik çiziminize göre kalıp/ișleme yöntemi seçilir.
                                </div>
                            </li>
                            <li class="d-flex gap-3">
                                <i class="fas fa-truck-fast text-accent mt-1"></i>
                                <div>
                                    <strong>Termin & lojistik planı</strong><br />
                                    Sevkiyat modeli, paketleme ve teslim süresi netleştirilir.
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="surface surface-accent">
                        <h6 class="fw-semibold mb-2">Hazır çiziminiz var mı?</h6>
                        <p class="text-soft mb-4">Teklif formundan sonra teknik ekibimizle CAD dosyalarınızı paylaşabilirsiniz.</p>
                        <a asp-controller="Home" asp-action="Contact" class="btn btn-light w-100">
                            <i class="fas fa-envelope-open"></i> Dosya gönderin
                        </a>
                    </div>
                    <div class="surface">
                        <h6 class="fw-semibold mb-2">Alternatif iletişim kanalları</h6>
                        <div class="d-flex flex-column gap-2">
                            <a href="tel:+902122434608" class="btn btn-outline-secondary text-start">
                                <i class="fas fa-phone me-2"></i> 0212 243 46 08
                            </a>
                            <a href="mailto:sales@ozlasteksan.com" class="btn btn-outline-secondary text-start">
                                <i class="fas fa-envelope me-2"></i> sales@ozlasteksan.com
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
