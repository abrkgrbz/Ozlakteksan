@model List<OzlasteksanWeb.Models.Product>
@{
    ViewData["Title"] = "Ürünler";
}

<!-- Hero Section - Kurumsal -->
<section class="products-hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <div class="hero-badge">
                    <i class="fas fa-industry me-2"></i>
                    <span>Endüstriyel Çözümler</span>
                </div>
                <h1 class="hero-title">Ürün Portföyümüz</h1>
                <p class="hero-description">
                    30 yılı aşkın tecrübemizle, endüstrinizin sızdırmazlık, titreşim ve özel üretim
                    ihtiyaçlarına yönelik geniş kauçuk ürün gamımızı keşfedin.
                </p>
                <div class="hero-stats">
                    <div class="stat-item">
                        <div class="stat-value">@Model.Count+</div>
                        <div class="stat-label">Ürün Çeşidi</div>
                    </div>
                    <div class="stat-divider"></div>
                    <div class="stat-item">
                        <div class="stat-value">1000+</div>
                        <div class="stat-label">Mutlu Müşteri</div>
                    </div>
                    <div class="stat-divider"></div>
                    <div class="stat-item">
                        <div class="stat-value">30+</div>
                        <div class="stat-label">Yıllık Tecrübe</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Products Section -->
<section class="products-section">
    <div class="container">
        <!-- Filter & Search Bar -->
        <div class="products-controls">
            <div class="row g-4">
                <!-- Category Filter Sidebar -->
                <div class="col-lg-3">
                    <div class="filter-sidebar">
                        <div class="filter-header">
                            <h6 class="filter-title">
                                <i class="fas fa-filter me-2"></i>
                                Kategoriler
                            </h6>
                        </div>
                        <div class="filter-body">
                            <div class="filter-group" id="productFilters" role="group" aria-label="Ürün kategori filtreleri">
                                <button type="button" class="filter-item active" data-filter="all" aria-pressed="true">
                                    <span class="filter-icon">
                                        <i class="fas fa-th"></i>
                                    </span>
                                    <span class="filter-label">Tüm Ürünler</span>
                                    <span class="filter-count">@Model.Count</span>
                                </button>
                                <button type="button" class="filter-item" data-filter="Conta" aria-pressed="false">
                                    <span class="filter-icon">
                                        <i class="fas fa-circle"></i>
                                    </span>
                                    <span class="filter-label">Contalar</span>
                                    <span class="filter-count">@Model.Count(p => p.Category == "Conta")</span>
                                </button>
                                <button type="button" class="filter-item" data-filter="Levha" aria-pressed="false">
                                    <span class="filter-icon">
                                        <i class="fas fa-layer-group"></i>
                                    </span>
                                    <span class="filter-label">Levhalar</span>
                                    <span class="filter-count">@Model.Count(p => p.Category == "Levha")</span>
                                </button>
                                <button type="button" class="filter-item" data-filter="Kaplin" aria-pressed="false">
                                    <span class="filter-icon">
                                        <i class="fas fa-cog"></i>
                                    </span>
                                    <span class="filter-label">Kaplin Lastikleri</span>
                                    <span class="filter-count">@Model.Count(p => p.Category == "Kaplin")</span>
                                </button>
                                <button type="button" class="filter-item" data-filter="Takoz" aria-pressed="false">
                                    <span class="filter-icon">
                                        <i class="fas fa-cube"></i>
                                    </span>
                                    <span class="filter-label">Takozlar</span>
                                    <span class="filter-count">@Model.Count(p => p.Category == "Takoz")</span>
                                </button>
                                <button type="button" class="filter-item" data-filter="Körük" aria-pressed="false">
                                    <span class="filter-icon">
                                        <i class="fas fa-expand-arrows-alt"></i>
                                    </span>
                                    <span class="filter-label">Körükler</span>
                                    <span class="filter-count">@Model.Count(p => p.Category == "Körük")</span>
                                </button>
                                <button type="button" class="filter-item" data-filter="Diyafram" aria-pressed="false">
                                    <span class="filter-icon">
                                        <i class="fas fa-record-vinyl"></i>
                                    </span>
                                    <span class="filter-label">Diyafram</span>
                                    <span class="filter-count">@Model.Count(p => p.Category == "Diyafram")</span>
                                </button>
                                <button type="button" class="filter-item" data-filter="Geçit" aria-pressed="false">
                                    <span class="filter-icon">
                                        <i class="fas fa-plug"></i>
                                    </span>
                                    <span class="filter-label">Geçit</span>
                                    <span class="filter-count">@Model.Count(p => p.Category == "Geçit")</span>
                                </button>
                                <button type="button" class="filter-item" data-filter="Profil" aria-pressed="false">
                                    <span class="filter-icon">
                                        <i class="fas fa-shapes"></i>
                                    </span>
                                    <span class="filter-label">Profil</span>
                                    <span class="filter-count">@Model.Count(p => p.Category == "Profil")</span>
                                </button>
                                <button type="button" class="filter-item" data-filter="Özel" aria-pressed="false">
                                    <span class="filter-icon">
                                        <i class="fas fa-tools"></i>
                                    </span>
                                    <span class="filter-label">Özel Üretim</span>
                                    <span class="filter-count">@Model.Count(p => p.Category == "Özel")</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Products Grid -->
                <div class="col-lg-9">
                    <!-- Search & Results Header -->
                    <div class="products-header">
                        <div class="search-box">
                            <i class="fas fa-search search-icon"></i>
                            <input
                                type="search"
                                id="productSearch"
                                class="search-input"
                                placeholder="Ürün adı, kategori veya özellik ara..."
                                aria-label="Ürün ara"
                            />
                        </div>
                        <div class="results-info">
                            <div id="resultsCounter" class="results-counter" aria-live="polite">
                                <strong>@Model.Count</strong> ürün listeleniyor
                            </div>
                        </div>
                    </div>

                    <!-- Products Grid -->
                    <div class="products-grid" id="productsGrid" role="region" aria-label="Ürün listesi">
                        @foreach (var product in Model)
                        {
                            <article class="product-card-pro" data-category="@product.Category" aria-labelledby="product-@product.Id-title">
                                <div class="product-card-header">
                                    <div class="product-icon-wrapper">
                                        <div class="product-icon">
                                            <i class="fas @product.Icon"></i>
                                        </div>
                                    </div>
                                    <button type="button"
                                            class="product-favorite"
                                            data-favorite-toggle="@product.Id"
                                            aria-label="Favorilere ekle"
                                            title="Favorilere ekle">
                                        <i class="far fa-heart"></i>
                                    </button>
                                </div>

                                <div class="product-card-body">
                                    <div class="product-category">
                                        <span class="category-badge">@product.Category</span>
                                    </div>
                                    <h3 id="product-@product.Id-title" class="product-title">@product.Name</h3>
                                    <p class="product-description">@product.Description</p>
                                </div>

                                <div class="product-card-footer">
                                    <div class="product-actions">
                                        <button type="button"
                                                class="btn-product-action"
                                                data-quick-view="@product.Id"
                                                aria-label="Hızlı görüntüle"
                                                title="Hızlı Görüntüle">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button type="button"
                                                class="btn-product-action"
                                                data-compare-toggle="@product.Id"
                                                aria-label="Karşılaştır"
                                                title="Karşılaştırmaya Ekle">
                                            <i class="fas fa-balance-scale"></i>
                                        </button>
                                        <a asp-action="Details"
                                           asp-route-id="@product.Id"
                                           class="btn-product-primary"
                                           aria-label="Detayları görüntüle">
                                            <span>Detaylar</span>
                                            <i class="fas fa-arrow-right"></i>
                                        </a>
                                    </div>
                                </div>
                            </article>
                        }
                    </div>

                    <!-- Empty State -->
                    <div id="emptyState" class="empty-state d-none">
                        <div class="empty-state-icon">
                            <i class="fas fa-box-open"></i>
                        </div>
                        <h3 class="empty-state-title">Ürün Bulunamadı</h3>
                        <p class="empty-state-text">
                            Aradığınız kriterlere uygun ürün bulunamadı.<br>
                            Lütfen farklı bir arama terimi veya kategori deneyin.
                        </p>
                        <button type="button" class="btn-reset-filters" onclick="document.getElementById('productSearch').value = ''; document.querySelector('[data-filter=all]').click();">
                            <i class="fas fa-redo me-2"></i>
                            Filtreleri Sıfırla
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Screen Reader Announcements -->
<div id="srAnnouncements" class="sr-only" role="status" aria-live="polite" aria-atomic="true"></div>

@section Scripts {
    <script src="~/js/products.js" asp-append-version="true"></script>
}
