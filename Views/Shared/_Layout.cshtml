<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Özlasteksan Kauçuk</title>
    <meta name="description" content="Sızdırmazlık çözümleri, endüstriyel kauçuk ürünleri ve özel üretim hizmetleri" />

    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#1f2a44" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="Özlasteksan" />

    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.json" />

    <!-- iOS Icons -->
    <link rel="apple-touch-icon" href="/images/icons/icon-192x192.png" />
    <link rel="apple-touch-icon" sizes="152x152" href="/images/icons/icon-152x152.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/images/icons/icon-180x180.png" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/images/icons/icon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/images/icons/icon-16x16.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cookie-consent.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/products-professional.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home-visual-enhancements.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home-visual-images.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/trust-gallery.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site-preferences.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="site-header">
        <div class="topbar d-none d-lg-block">
            <div class="container d-flex justify-content-between align-items-center py-2">
                <div class="d-flex align-items-center gap-4">
                    <span class="text-white-50">
                        <i class="fas fa-phone-alt me-2"></i>0212 243 46 08
                    </span>
                    <span class="text-white-50">
                        <i class="fas fa-clock me-2"></i>Pazartesi - Cuma, 08:00 - 18:00
                    </span>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <a class="text-white-50 text-decoration-none" href="mailto:info@ozlasteksan.com">
                        <i class="fas fa-envelope me-2"></i>info@ozlasteksan.com
                    </a>
                    <div class="social-links">
                        <a href="#" class="text-white-50 me-3" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#" class="text-white-50" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <nav class="navbar navbar-expand-lg site-navbar shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="brand-icon d-inline-flex justify-content-center align-items-center me-3">
                        <i class="fas fa-industry"></i>
                    </span>
                    <span>
                        <span class="brand-title">Özlasteksan</span>
                        <span class="brand-subtitle d-block">Endüstriyel Kauçuk Çözümleri</span>
                    </span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Menüyü Aç/Kapat">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-lg-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">Hakkımızda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Ürünler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">İletişim</a>
                        </li>
                        <li class="nav-item">
                            <button type="button" class="nav-link btn btn-link position-relative" data-favorites-view>
                                <i class="fas fa-heart text-danger"></i> Favorilerim
                                <span class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle d-none" data-favorites-count>0</span>
                            </button>
                        </li>
                        <li class="nav-item d-lg-none">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Quote">Teklif Al</a>
                        </li>
                    </ul>
                    <div class="d-none d-lg-flex ms-4">
                        <a class="btn btn-accent" asp-area="" asp-controller="Home" asp-action="Quote">
                            Teklif Alın
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="site-footer mt-5">
        <div class="container py-5">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="footer-brand">
                        <span class="brand-icon me-2">
                            <i class="fas fa-industry"></i>
                        </span>
                        <div>
                            <span class="brand-title text-white">Özlasteksan</span>
                            <span class="brand-subtitle text-white-50 d-block">Endüstriyel Kauçuk Çözümleri</span>
                        </div>
                    </div>
                    <p class="text-white-50 mt-3">
                        30 yılı aşkın deneyimle, sızdırmazlık ürünleri ve özel üretim kauçuk parçalar için güvenilir çözüm ortağınız.
                    </p>
                </div>
                <div class="col-md-4">
                    <h6 class="text-white fw-semibold mb-3">Hızlı Linkler</h6>
                    <ul class="list-unstyled footer-links">
                        <li><a asp-controller="Home" asp-action="About">Hakkımızda</a></li>
                        <li><a asp-controller="Products" asp-action="Index">Ürünlerimiz</a></li>
                        <li><a asp-controller="Home" asp-action="Quote">Teklif Al</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">İletişim</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy">KVKK Metni</a></li>
                        <li><a asp-controller="Home" asp-action="CookiePolicy">Çerez Politikası</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6 class="text-white fw-semibold mb-3">İletişim</h6>
                    <ul class="list-unstyled footer-contact">
                        <li>
                            <i class="fas fa-phone"></i>
                            <span>0212 243 46 08</span>
                        </li>
                        <li>
                            <i class="fas fa-envelope"></i>
                            <span>info@ozlasteksan.com</span>
                        </li>
                        <li>
                            <i class="fas fa-location-dot"></i>
                            <span>İstanbul, Türkiye</span>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center gap-3 mt-3">
                        <a href="#" class="btn btn-outline-light btn-sm">
                            <i class="fab fa-linkedin-in me-2"></i>Bizi Takip Edin
                        </a>
                        <a asp-area="" asp-controller="Home" asp-action="Quote" class="btn btn-accent btn-sm">
                            Hızlı Teklif
                        </a>
                    </div>
                </div>
            </div>
            <hr class="footer-divider my-5" />
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center text-white-50">
                <p class="mb-2 mb-md-0">&copy; @DateTime.Now.Year Özlasteksan Kauçuk. Tüm hakları saklıdır.</p>
                <div class="d-flex align-items-center gap-3">
                    <a asp-controller="Home" asp-action="Privacy" class="text-white-50 small text-decoration-none">KVKK Aydınlatma Metni</a>
                    <span class="text-white-25">|</span>
                    <a asp-controller="Home" asp-action="CookiePolicy" class="text-white-50 small text-decoration-none">Çerez Politikası</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Simple Toast sistemi önce yüklensin -->
    <script src="~/js/simple-toast.js" asp-append-version="true"></script>
    <script src="~/js/ui-enhancements.js" asp-append-version="true"></script>
    <script src="~/js/gallery-lightbox.js" asp-append-version="true"></script>
    <script src="~/js/quick-view.js" asp-append-version="true"></script>
    <script src="~/js/favorites.js" asp-append-version="true"></script>
    <script src="~/js/product-comparison.js" asp-append-version="true"></script>
    <script src="~/js/i18n.js" asp-append-version="true"></script>
    <script src="~/js/pwa-register.js" asp-append-version="true"></script>
    <script src="~/js/site-preferences.js" asp-append-version="true"></script>
    <script src="~/js/cookie-consent.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
